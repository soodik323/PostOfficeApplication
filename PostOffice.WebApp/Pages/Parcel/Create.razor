@page "/parcel/create/{id:int}/{bagid:int}"
@using Microsoft.AspNetCore.Components
@using PostOffice.Domain


<div class="row">
    <div class="col-lg-9">
        <h1>Create</h1>
    </div>
    <div class="col-lg-3 text-right">
        <input type="button" class="btn btn-secondary btn-sm" @onclick="@NavigateToList" value="Go Back To List" />
    </div>
</div>


@{
    if(Message != null)
        if(Message.Equals("Failed"))
        {
            <div class="alert alert-danger" role="alert">
                @Message 
            </div>
        }

}


<EditForm Model="@Parcel" OnValidSubmit="@HandleValidSubmit">
    
    <DataAnnotationsValidator />
    @*<ValidationSummary></ValidationSummary>*@

    <div class="form-group">
        <label>Parcel Number</label>
        <InputText class="form-control" @bind-Value="@Parcel.ParcelNumber" />
        <ValidationMessage class="offset-sm-3 col-sm-5" For="@(() => @Parcel.ParcelNumber)" />
    </div>
    <div class="form-group">
        <label>Recipient Name</label>
        <InputText class="form-control" @bind-Value="@Parcel.RecipientName"/>
        <ValidationMessage class="offset-sm-3 col-sm-5" For="@(() => @Parcel.RecipientName)" />
    </div>
    <div class="form-group">
        <label>Destination Country</label>
        <InputText class="form-control" @bind-Value="@Parcel.DestinationCountry"/>
        <ValidationMessage class="offset-sm-3 col-sm-5" For="@(() => @Parcel.DestinationCountry)" />
    </div>
    <div class="form-group">
        <label>Price</label>
        <InputNumber class="form-control" @bind-Value="@Parcel.Price"/>
        <ValidationMessage class="offset-sm-3 col-sm-5" For="@(() => @Parcel.Price)" />
    </div>
    <div class="form-group">
        <label>Weight</label>
        <InputNumber class="form-control" @bind-Value="@Parcel.Weight"/>
        <ValidationMessage class="offset-sm-3 col-sm-5" For="@(() => @Parcel.Weight)" />
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
</EditForm>
